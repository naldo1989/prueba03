<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Registro de votos</title>
  <style>
    body {
      background-color: #f3f3f3;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
    }

    .container {
      max-width: 400px;
      margin: auto;
      background: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 3px 8px rgba(0,0,0,0.2);
    }

    h2 {
      text-align: center;
      color: #333;
    }

    label {
      font-weight: bold;
      display: block;
      margin-top: 10px;
    }

    input {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-size: 1em;
    }

    button {
      width: 100%;
      margin-top: 15px;
      background-color: #007bff;
      color: white;
      border: none;
      padding: 10px;
      border-radius: 8px;
      font-size: 1.1em;
      cursor: pointer;
    }

    button:hover {
      background-color: #0056b3;
    }

    .logout {
      background-color: #d9534f;
    }

    .logout:hover {
      background-color: #c9302c;
    }

    .info {
      margin: 10px 0;
      font-size: 0.9em;
      color: #555;
    }

    .total {
      text-align: center;
      font-weight: bold;
      margin-top: 20px;
      font-size: 1.2em;
      background: #e8f4ff;
      padding: 10px;
      border-radius: 8px;
    }

    #mensaje {
      text-align: center;
      margin-top: 10px;
      font-weight: bold;
    }

    @media (max-width: 480px) {
      .container {
        padding: 15px;
        margin: 10px;
      }
      h2 {
        font-size: 1.3em;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Registro de votos</h2>

    <div class="info">
      <p><strong>Usuario:</strong> <%= usuario %></p>
      <p><strong>Escuela:</strong> <%= nro_escuela %></p>
      <p><strong>Mesa:</strong> <%= nro_mesa %></p>
    </div>

    <form id="formRegistro">
      <label>N° de orden:</label>
      <input type="text" name="nro_orden" id="nro_orden" required>

      <label>Cantidad de votos:</label>
      <input type="number" name="cantidad_votos" id="cantidad_votos" required>

      <button type="submit">Registrar</button>
    </form>

    <p id="mensaje"></p>

    <div class="total">
      Total acumulado: <span id="total">0</span>
    </div>

    <form action="/logout" method="POST">
      <button type="submit" class="logout">Cerrar sesión</button>
    </form>
  </div>

  <script>
    async function actualizarTotal() {
      try {
        const res = await fetch("/total");
        const data = await res.json();
        document.getElementById("total").textContent = data.total || 0;
      } catch (err) {
        console.error("Error al obtener total:", err);
      }
    }

    document.getElementById("formRegistro").addEventListener("submit", async (e) => {
      e.preventDefault();

      const nro_orden = document.getElementById("nro_orden").value.trim();
      const cantidad_votos = document.getElementById("cantidad_votos").value.trim();
      const mensaje = document.getElementById("mensaje");

      if (!nro_orden || !cantidad_votos) {
        mensaje.style.color = "red";
        mensaje.textContent = "⚠️ Completá todos los campos.";
        return;
      }

      try {
        const res = await fetch("/registrar", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ nro_orden, cantidad_votos })
        });

        const data = await res.json();

        if (data.success) {
          mensaje.style.color = "green";
          mensaje.textContent = data.success;
          document.getElementById("formRegistro").reset();
          actualizarTotal();
        } else {
          mensaje.style.color = "red";
          mensaje.textContent = data.error || "Error al registrar.";
        }

      } catch (err) {
        console.error("Error al enviar registro:", err);
        mensaje.style.color = "red";
        mensaje.textContent = "Error de conexión.";
      }
    });

    // Cargar el total al entrar
    actualizarTotal();
  </script>
</body>
</html>
