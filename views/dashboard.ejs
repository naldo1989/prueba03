<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Participación</title>
  <style>
    :root {
      --primario: #1e3c72;
      --secundario: #2a5298;
      --verde: #4CAF50;
      --rojo: #e74c3c;
      --texto: #ffffff;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, var(--primario), var(--secundario));
      color: var(--texto);
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      min-height: 100vh;
    }

    .container {
      width: 95%;
      max-width: 420px;
      background: rgba(255,255,255,0.1);
      border-radius: 15px;
      padding: 20px;
      margin-top: 30px;
      box-shadow: 0 0 15px rgba(0,0,0,0.4);
      backdrop-filter: blur(8px);
      text-align: center;
    }

    h2 {
      margin-bottom: 10px;
      font-size: 1.4em;
    }

    .info {
      font-size: 0.95em;
      margin-bottom: 20px;
      opacity: 0.9;
    }

    .porcentaje {
      font-size: 2.5em;
      font-weight: bold;
      margin: 15px 0;
    }

    .barra {
      width: 100%;
      background: rgba(255,255,255,0.2);
      border-radius: 10px;
      overflow: hidden;
      height: 22px;
      margin-bottom: 15px;
    }

    .relleno {
      height: 100%;
      background: var(--verde);
      width: 0%;
      transition: width 0.6s ease-in-out;
    }

    input[type="number"] {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border-radius: 8px;
      border: none;
      text-align: center;
      font-size: 1.1em;
    }

    button {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 10px;
      margin-top: 10px;
      font-size: 1.1em;
      cursor: pointer;
      font-weight: bold;
      color: #fff;
      transition: transform 0.2s;
    }

    button:hover {
      transform: scale(1.04);
    }

    #btnRegistrar {
      background: var(--verde);
    }

    #btnCerrar {
      background: var(--rojo);
    }

    #btnSalir {
      background: #888;
    }

    .mensaje {
      margin-top: 10px;
      font-size: 0.95em;
      font-weight: bold;
      color: #a6ff96;
    }

    @media (max-width: 480px) {
      h2 { font-size: 1.3em; }
      .porcentaje { font-size: 2em; }
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Escuela <%= nro_escuela %> - Mesa <%= nro_mesa %></h2>
    <p class="info">Seguimiento de participación electoral</p>

    <div class="porcentaje" id="porcentaje"><%= porcentaje %>%</div>
    <div class="barra">
      <div class="relleno" id="barra" style="width: <%= porcentaje %>%"></div>
    </div>

    <% if (!cerrado) { %>
      <form id="formVotos">
        <input type="number" name="cantidad_votos" min="1" max="999" placeholder="Cantidad de votos a sumar" required>
        <button type="submit" id="btnRegistrar">Registrar votos</button>
      </form>

      <button id="btnCerrar">Cerrar mesa</button>
    <% } else { %>
      <p class="mensaje">✅ Mesa cerrada. No se permiten más cargas.</p>
    <% } %>

    <button id="btnSalir">Salir</button>

    <p class="mensaje" id="mensaje"></p>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("formVotos");
      const barra = document.getElementById("barra");
      const porcentaje = document.getElementById("porcentaje");
      const mensaje = document.getElementById("mensaje");

      if (form) {
        form.addEventListener("submit", async (e) => {
          e.preventDefault();
          const datos = Object.fromEntries(new FormData(form));
          const cantidad = parseInt(datos.cantidad_votos);

          if (isNaN(cantidad) || cantidad <= 0) {
            mensaje.textContent = "⚠️ Ingrese una cantidad válida.";
            return;
          }

          const res = await fetch("/registrar", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ cantidad_votos: cantidad }),
          });

          const data = await res.json();
          if (data.success) {
            porcentaje.textContent = data.porcentaje + "%";
            barra.style.width = data.porcentaje + "%";
            mensaje.textContent = "✅ Votos registrados correctamente.";
            form.reset();
          } else {
            mensaje.textContent = "⚠️ " + (data.error || "Error al registrar votos.");
          }
        });
      }

      const btnCerrar = document.getElementById("btnCerrar");
      if (btnCerrar) {
        btnCerrar.addEventListener("click", async () => {
          if (!confirm("¿Seguro que querés cerrar la mesa?")) return;
          const res = await fetch("/cerrar", { method: "POST" });
          const data = await res.json();

          if (data.success) {
            mensaje.textContent = "✅ Mesa cerrada correctamente.";
            setTimeout(() => location.reload(), 1000);
          } else {
            mensaje.textContent = "⚠️ Error al cerrar mesa.";
          }
        });
      }

      const btnSalir = document.getElementById("btnSalir");
      btnSalir.addEventListener("click", async () => {
        await fetch("/logout", { method: "POST" });
        window.location.href = "/login";
      });
    });
  </script>
</body>
</html>
