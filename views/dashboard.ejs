<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Panel de Registro</title>
  <style>
    body {
      background: linear-gradient(135deg, #667eea, #764ba2);
      font-family: 'Segoe UI', sans-serif;
      height: 100vh;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      color: #333;
    }

    .dashboard-container {
      background: #fff;
      padding: 30px 40px;
      border-radius: 16px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
      width: 100%;
      max-width: 420px;
      text-align: center;
    }

    h2 {
      margin-bottom: 15px;
      color: #444;
    }

    .info {
      background: #f2f2f2;
      padding: 10px;
      border-radius: 8px;
      margin-bottom: 15px;
      text-align: left;
      font-size: 14px;
    }

    label {
      display: block;
      text-align: left;
      margin-top: 12px;
      font-weight: 600;
      color: #555;
    }

    input {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 15px;
      transition: border-color 0.3s;
    }

    input:focus {
      border-color: #667eea;
      outline: none;
    }

    button {
      margin-top: 20px;
      background: #667eea;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 8px;
      width: 100%;
      font-size: 16px;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background: #5563c1;
    }

    .logout-btn {
      background: #d9534f;
      margin-top: 10px;
    }

    .logout-btn:hover {
      background: #b52b27;
    }

    .mensaje {
      margin-top: 15px;
      font-weight: bold;
      color: #28a745;
      display: none;
    }
  </style>
</head>
<body>
  <div class="dashboard-container">
    <h2>Registro de Votos</h2>

    <div class="info">
      <p><strong>Usuario:</strong> <%= usuario %></p>
      <p><strong>Escuela:</strong> <%= nro_escuela %></p>
      <p><strong>Mesa:</strong> <%= nro_mesa %></p>
    </div>

    <form id="registroForm">
      <label>N° de orden:</label>
      <input type="text" name="nro_orden" required>

      <label>Cantidad de votos:</label>
      <input type="number" name="cantidad_votos" required>

      <button type="submit">Registrar</button>
    </form>

    <p id="mensaje" class="mensaje">✅ Registro exitoso</p>

    <form action="/logout" method="POST">
      <button type="submit" class="logout-btn">Cerrar sesión</button>
    </form>
  </div>

  <script>
    const form = document.getElementById("registroForm");
    const mensaje = document.getElementById("mensaje");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      const datos = new FormData(form);
      const payload = {
        nro_orden: datos.get("nro_orden"),
        cantidad_votos: datos.get("cantidad_votos")
      };

      try {
        const res = await fetch("/registrar", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(payload)
        });

