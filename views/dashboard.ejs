<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard - Registro de Votos</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f3f4f6;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
    }

    header {
      background: #2563eb;
      color: white;
      padding: 1rem;
      text-align: center;
      width: 100%;
      font-size: 1.3rem;
      font-weight: bold;
    }

    .container {
      width: 95%;
      max-width: 600px;
      background: white;
      margin-top: 1rem;
      padding: 1rem;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    input {
      padding: 0.8rem;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 1rem;
    }

    button {
      background: #2563eb;
      color: white;
      border: none;
      padding: 0.8rem;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      font-weight: bold;
    }

    button:hover {
      background: #1d4ed8;
    }

    .total {
      background: #e0f2fe;
      border-radius: 8px;
      padding: 0.8rem;
      text-align: center;
      font-size: 1.2rem;
      margin-top: 1rem;
      font-weight: bold;
      color: #1e40af;
    }

    .lista {
      margin-top: 1rem;
      background: #f9fafb;
      border-radius: 8px;
      padding: 0.5rem;
    }

    .registro {
      background: #f1f5f9;
      margin: 0.3rem 0;
      padding: 0.5rem;
      border-radius: 8px;
      font-size: 0.9rem;
    }

    .registro span {
      display: block;
    }

    @media (max-width: 480px) {
      header { font-size: 1.1rem; }
      button, input { font-size: 0.9rem; }
    }
  </style>
</head>
<body>
  <header>Registro de Votos</header>

  <div class="container">
    <form id="registroForm">
      <input type="number" id="nro_orden" placeholder="N° de orden" required />
      <input type="number" id="cantidad_votos" placeholder="Cantidad de votos" required />
      <button type="submit">Registrar</button>
    </form>

    <div class="total">
      Total acumulado: <span id="total"><%= total || 0 %></span>
    </div>

    <div class="lista">
      <h3>Últimos 5 registros</h3>
      <% if (ultimos && ultimos.length > 0) { %>
        <% ultimos.forEach(reg => { %>
          <div class="registro">
            <span><strong>Orden:</strong> <%= reg.nro_orden %></span>
            <span><strong>Cant.:</strong> <%= reg.cantidad_votos %></span>
            <span><strong>Fecha:</strong> <%= new Date(reg.fecha).toLocaleString("es-AR") %></span>
          </div>
        <% }) %>
      <% } else { %>
        <p>No hay registros aún.</p>
      <% } %>
    </div>
  </div>

  <script>
    document.getElementById("registroForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      const nro_orden = document.getElementById("nro_orden").value;
      const cantidad_votos = document.getElementById("cantidad_votos").value;

      const res = await fetch("/registrar", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ nro_orden, cantidad_votos }),
      });

      const data = await res.json();

      if (data.success) {
        document.getElementById("total").textContent = data.total;
        location.reload(); // recargar para actualizar lista
      } else {
        alert("Error al registrar voto");
      }
    });
  </script>
</body>
</html>
