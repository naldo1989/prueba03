<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #1e3c72, #2a5298);
      color: white;
      margin: 0;
      padding-top: 70px; /* espacio para el encabezado fijo */
      text-align: center;
    }

    /* Encabezado fijo */
    header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      background-color: #153b76;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 15px;
      color: #fff;
      font-size: 1em;
      font-weight: bold;
      box-shadow: 0 2px 8px rgba(0,0,0,0.3);
      z-index: 1000;
    }

    header .user {
      font-size: 0.95em;
      text-align: left;
    }

    header form {
      margin: 0;
    }

    header button {
      background-color: #d9534f;
      border: none;
      padding: 8px 14px;
      border-radius: 8px;
      color: white;
      font-weight: bold;
      font-size: 0.9em;
      cursor: pointer;
      transition: 0.3s;
    }

    header button:hover {
      background-color: #c9302c;
      transform: scale(1.05);
    }

    .card {
      background: rgba(255, 255, 255, 0.1);
      border-radius: 15px;
      padding: 20px;
      margin: 10px auto;
      max-width: 400px;
      backdrop-filter: blur(8px);
      box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

    h2 {
      margin-bottom: 10px;
    }

    label {
      display: block;
      text-align: left;
      margin-top: 10px;
      font-weight: 500;
    }

    input {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 10px;
      margin-top: 5px;
      font-size: 1em;
      box-sizing: border-box;
    }

    input:focus {
      outline: 2px solid #00eaff;
      background: rgba(255,255,255,0.2);
      color: #fff;
    }

    button {
      margin-top: 15px;
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 10px;
      font-size: 1em;
      font-weight: bold;
      color: white;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn-registrar {
      background-color: #4CAF50;
    }

    .btn-registrar:hover {
      background-color: #45a049;
      transform: scale(1.03);
    }

    .total {
      margin-top: 15px;
      font-weight: bold;
      font-size: 1.2em;
      color: #a6ff96;
    }

    #mensaje {
      margin-top: 10px;
      font-weight: bold;
      min-height: 20px;
    }

    /* Adaptación móvil */
    @media (max-width: 480px) {
      h2 { font-size: 1.2em; }
      header { font-size: 0.9em; padding: 10px; }
      input, button { font-size: 1em; }
      .card { padding: 15px; margin: 5px; }
    }
  </style>
</head>
<body>
  <header>
    <div class="user">
      <div><%= usuario %></div>
      <small>Escuela <%= nro_escuela %> • Mesa <%= nro_mesa %></small>
    </div>
    <form action="/logout" method="POST">
      <button type="submit">Salir</button>
    </form>
  </header>

  <div class="card">
    <h2>Registro de Votos</h2>

    <form id="formRegistro" action="/registrar" method="POST">
      <label>N° de orden:</label>
      <input type="text" name="nro_orden" required>

      <label>Cantidad:</label>
      <input type="number" name="cantidad_votos" required>

      <button type="submit" class="btn-registrar">Registrar</button>
    </form>

    <p id="mensaje"></p>

    <div class="total">
      Total acumulado: <span id="total"><%= total || 0 %></span>
    </div>
  </div>

  <script>
    document.getElementById('formRegistro').addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const data = new FormData(form);

      const res = await fetch('/registrar', {
        method: 'POST',
        body: data
      });

      const result = await res.json();

      if (result.success) {
        document.getElementById('mensaje').textContent = "✅ Registro exitoso";
        document.getElementById('total').textContent = result.total;
        form.reset();
      } else {
        document.getElementById('mensaje').textContent = "❌ Error al registrar";
      }

      setTimeout(() => document.getElementById('mensaje').textContent = "", 3000);
    });
  </script>
</body>
</html>
