<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Control de Votación</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f3f4f6;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
    }

    header {
      width: 100%;
      background: #2563eb;
      color: white;
      text-align: center;
      padding: 1rem;
      font-size: 1.3rem;
      font-weight: bold;
    }

    .container {
      width: 95%;
      max-width: 500px;
      background: white;
      margin-top: 1rem;
      padding: 1rem;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    input {
      padding: 0.8rem;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 1rem;
    }

    button {
      background: #2563eb;
      color: white;
      border: none;
      padding: 0.8rem;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      font-weight: bold;
    }

    button:hover {
      background: #1d4ed8;
    }

    .status {
      text-align: center;
      margin-bottom: 1rem;
      font-size: 1rem;
      font-weight: bold;
      color: #1e3a8a;
    }

    .total {
      background: #e0f2fe;
      border-radius: 8px;
      padding: 1rem;
      text-align: center;
      font-size: 1.2rem;
      margin-top: 1rem;
      font-weight: bold;
      color: #1e3a8a;
    }

    .logout-btn {
      background: #dc2626;
      margin-top: 1rem;
      width: 100%;
    }

    @media (max-width: 480px) {
      header { font-size: 1.1rem; }
      input, button { font-size: 0.9rem; }
    }
  </style>
</head>
<body>
  <header>
    Escuela <%= nro_escuela %> | Mesa <%= nro_mesa %>
  </header>

  <div class="container">
    <div class="status">
      Estado: <span id="estadoMesa">Abierta</span>
    </div>

    <form id="registroForm">
      <input type="number" id="cantidad_votos" placeholder="Cantidad total de votos" required min="0" />
      <button type="submit">Registrar</button>
    </form>

    <div class="total">
      Participación actual: <span id="porcentaje"><%= porcentaje || 0 %></span>%
    </div>

    <form id="cerrarForm">
      <button class="logout-btn" type="submit">Cerrar Mesa</button>
    </form>

    <form action="/logout" method="POST">
      <button class="logout-btn" type="submit">Cerrar sesión</button>
    </form>
  </div>

  <script>
    const form = document.getElementById("registroForm");
    const cerrarForm = document.getElementById("cerrarForm");
    const porcentajeEl = document.getElementById("porcentaje");
    const estadoMesaEl = document.getElementById("estadoMesa");

    // 🔹 Enviar actualización de votos
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const cantidad_votos = document.getElementById("cantidad_votos").value;

      const res = await fetch("/registrar", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ cantidad_votos }),
      });

      const data = await res.json();
      if (data.success) {
        porcentajeEl.textContent = data.porcentaje;
        form.reset();
      } else {
        alert(data.error || "Error al registrar");
      }
    });

    // 🔹 Cerrar mesa
    cerrarForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      const res = await fetch("/cerrar", { method: "POST" });
      const data = await res.json();
      if (data.success) {
        estadoMesaEl.textContent = "Cerrada";
        estadoMesaEl.style.color = "red";
        alert("Mesa cerrada correctamente");
      } else {
        alert(data.error || "Error al cerrar la mesa");
      }
    });
  </script>
</body>
</html>
