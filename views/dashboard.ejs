<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Registro de Votos</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f3f4f6;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
    }

    header {
      width: 100%;
      background: #2563eb;
      color: white;
      text-align: center;
      padding: 1rem;
      font-size: 1.3rem;
      font-weight: bold;
    }

    .container {
      width: 95%;
      max-width: 500px;
      background: white;
      margin-top: 1rem;
      padding: 1rem;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    input {
      padding: 0.8rem;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 1rem;
    }

    button {
      background: #2563eb;
      color: white;
      border: none;
      padding: 0.8rem;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      font-weight: bold;
    }

    button:hover {
      background: #1d4ed8;
    }

    .total {
      background: #e0f2fe;
      border-radius: 8px;
      padding: 1rem;
      text-align: center;
      font-size: 1.2rem;
      margin-top: 1rem;
      font-weight: bold;
      color: #1e3a8a;
    }

    .lista {
      margin-top: 1.5rem;
      background: #f9fafb;
      border-radius: 8px;
      padding: 0.5rem;
    }

    .registro {
      background: #f1f5f9;
      margin: 0.3rem 0;
      padding: 0.7rem;
      border-radius: 8px;
      font-size: 0.9rem;
    }

    .registro strong {
      color: #1e40af;
    }

    @media (max-width: 480px) {
      header { font-size: 1.1rem; }
      input, button { font-size: 0.9rem; }
    }
  </style>
</head>
<body>
  <header>
    Escuela <%= nro_escuela %> | Mesa <%= nro_mesa %>
  </header>

  <div class="container">
    <form id="registroForm">
      <input type="number" id="nro_orden" placeholder="NÂ° de orden" required />
      <input type="number" id="cantidad_votos" placeholder="Cantidad de votos" required />
      <button type="submit">Registrar</button>
    </form>

    <div class="total">
      Total acumulado: <span id="total"><%= total || 0 %></span>
    </div>

    <div class="lista">
      <h3>Ãšltimos 5 registros</h3>
      <div id="ultimos"></div>
    </div>
  </div>
  <form action="/logout" method="POST">
    <button class="logout-btn" type="submit">Cerrar sesiÃ³n</button>
  </form>

  <script>
    const form = document.getElementById("registroForm");
    const totalEl = document.getElementById("total");
    const ultimosEl = document.getElementById("ultimos");

    // ðŸ”¹ Cargar los Ãºltimos registros
    async function cargarUltimos() {
      const res = await fetch("/ultimos");
      const data = await res.json();
      ultimosEl.innerHTML = "";

      if (data.length === 0) {
        ultimosEl.innerHTML = "<p>No hay registros aÃºn.</p>";
        return;
      }

      data.forEach(reg => {
        const div = document.createElement("div");
        div.className = "registro";
        div.innerHTML = `
          <strong>Orden:</strong> ${reg.nro_orden} <br>
          <strong>Cant. votos:</strong> ${reg.cantidad_votos} <br>
          <strong>Fecha:</strong> ${new Date(reg.fecha_registro).toLocaleString("es-AR")}
        `;
        ultimosEl.appendChild(div);
      });
    }

    // ðŸ”¹ Cargar total
    async function cargarTotal() {
      const res = await fetch("/total");
      const data = await res.json();
      totalEl.textContent = data.total;
    }

    // ðŸ”¹ Enviar registro
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const nro_orden = document.getElementById("nro_orden").value;
      const cantidad_votos = document.getElementById("cantidad_votos").value;

      const res = await fetch("/registrar", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ nro_orden, cantidad_votos }),
      });

      const data = await res.json();
      if (data.success) {
        await cargarTotal();
        await cargarUltimos();
        form.reset();
      } else {
        alert(data.error || "Error al registrar");
      }
    });

    // ðŸ”¹ Cargar al iniciar
    cargarUltimos();
  </script>
</body>
</html>
