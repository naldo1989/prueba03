<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Panel de Registro</title>
  <style>
    body {
      background: linear-gradient(135deg, #667eea, #764ba2);
      font-family: 'Segoe UI', sans-serif;
      height: 100vh;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      color: #333;
    }

    .container {
      background: #fff;
      padding: 30px 40px;
      border-radius: 16px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
      width: 100%;
      max-width: 520px;
      text-align: center;
    }

    h2 {
      color: #444;
      margin-bottom: 10px;
    }

    .info {
      font-size: 14px;
      color: #555;
      margin-bottom: 15px;
      text-align: left;
      background: #f7f7f7;
      padding: 10px;
      border-radius: 8px;
    }

    label {
      display: block;
      text-align: left;
      margin-top: 12px;
      font-weight: 600;
      color: #555;
    }

    input {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 15px;
      transition: border-color 0.3s;
    }

    input:focus {
      border-color: #667eea;
      outline: none;
    }

    button {
      margin-top: 20px;
      background: #667eea;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 8px;
      width: 100%;
      font-size: 16px;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background: #5563c1;
    }

    .logout-btn {
      background: #d9534f;
      margin-top: 10px;
    }

    .mensaje {
      margin-top: 10px;
      font-weight: bold;
      color: #28a745;
      display: none;
    }

    .historial {
      margin-top: 20px;
      text-align: left;
    }

    .historial h3 {
      margin-bottom: 8px;
      color: #444;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 14px;
    }

    th, td {
      padding: 6px;
      border-bottom: 1px solid #ddd;
    }

    th {
      background: #f0f0f0;
      text-align: left;
    }

    tr:hover {
      background: #f9f9f9;
    }

    .total {
      margin-top: 8px;
      font-weight: bold;
      color: #222;
      text-align: right;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Registro de votos</h2>

    <div class="info">
      <p><strong>Usuario:</strong> <%= usuario %></p>
      <p><strong>Escuela:</strong> <%= nro_escuela %></p>
      <p><strong>Mesa:</strong> <%= nro_mesa %></p>
    </div>

    <form id="registroForm">
      <label for="nro_orden">N¬∞ de orden:</label>
      <input type="text" id="nro_orden" name="nro_orden" required>

      <label for="cantidad_votos">Cantidad:</label>
      <input type="number" id="cantidad_votos" name="cantidad_votos" required>

      <button type="submit">Registrar</button>
    </form>

    <p id="mensajeExito" class="mensaje">‚úÖ Registro exitoso</p>

    <div class="historial">
      <h5>üó≥Ô∏è √öltimos registros</h5>
     <p id="totalVotos" class="total"></p>
      <table id="tablaHistorial">
        <thead>
          <tr>
            <th>Orden</th>
            <th>Cantidad</th>
            <th>Hora</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
      
    </div>

    <form action="/logout" method="POST">
      <button type="submit" class="logout-btn">Cerrar sesi√≥n</button>
    </form>
  </div>

  <script>
    const form = document.getElementById('registroForm');
    const mensaje = document.getElementById('mensajeExito');
    const tabla = document.querySelector('#tablaHistorial tbody');
    const totalVotos = document.getElementById('totalVotos');

    async function cargarHistorial() {
      const res = await fetch('/ultimos-registros');
      const data = await res.json();

      tabla.innerHTML = '';
      let total = 0;

      data.forEach(reg => {
        const fila = document.createElement('tr');
        fila.innerHTML = `
          <td>${reg.nro_orden}</td>
          <td>${reg.cantidad_votos}</td>
          <td>${new Date(reg.fecha_registro).toLocaleTimeString()}</td>
        `;
        tabla.appendChild(fila);
        total += parseInt(reg.cantidad_votos);
      });

      totalVotos.textContent = `üî¢ Total acumulado: ${total} votos`;
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const data = {
        nro_orden: form.nro_orden.value,
        cantidad_votos: form.cantidad_votos.value
      };

      const res = await fetch('/registrar', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      if (res.ok) {
        mensaje.style.display = 'block';
        mensaje.textContent = '‚úÖ Registro exitoso';
        form.reset();
        await cargarHistorial();
        setTimeout(() => {
          mensaje.style.display = 'none';
        }, 2000);
      } else {
        mensaje.style.display = 'block';
        mensaje.textContent = '‚ùå Error al registrar';
        mensaje.style.color = 'red';
      }
    });

    // Cargar historial inicial
    cargarHistorial();
  </script>
</body>
</html>
