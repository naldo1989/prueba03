<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      font-family: sans-serif;
      background-color: #f2f2f2;
      margin: 0;
      padding: 0;
    }

    /* Barra superior fija */
    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background-color: #333;
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.5rem 1rem;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
      z-index: 1000;
    }

    .navbar h2 {
      margin: 0;
      font-size: 1.2rem;
    }

    .navbar form button {
      background: red;
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-weight: bold;
      cursor: pointer;
    }

    /* Contenedor principal, dejando espacio por la navbar */
    .container {
      margin-top: 60px; /* altura de la navbar */
      padding: 1rem;
    }

    /* Formulario */
    form {
      background: white;
      padding: 1rem;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      margin-bottom: 1rem;
    }

    label, input, button {
      display: block;
      width: 100%;
      margin-bottom: 0.5rem;
    }

    input {
      padding: 0.5rem;
      border-radius: 6px;
      border: 1px solid #ccc;
      box-sizing: border-box;
    }

    button {
      background: #4CAF50;
      color: white;
      border: none;
      padding: 0.7rem;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
    }

    button:hover {
      background: #45a049;
    }

    .total, .ultimos {
      background: white;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    @media (max-width: 480px) {
      .navbar h2 {
        font-size: 1rem;
      }
      button {
        padding: 0.5rem;
      }
    }
  </style>
</head>
<body>

  <!-- Navbar fija -->
  <div class="navbar">
    <h2>Dashboard - <%= usuario %></h2>
    <form action="/logout" method="POST">
      <button type="submit">Cerrar sesión</button>
    </form>
  </div>

  <div class="container">
    <!-- Formulario para registrar votos -->
    <form id="formRegistro">
      <label>N° de orden:</label>
      <input type="text" name="nro_orden" required>

      <label>Cantidad de votos:</label>
      <input type="number" name="cantidad_votos" required>

      <button type="submit">Registrar</button>
    </form>

    <!-- Total acumulado -->
    <div class="total">
      <strong>Total acumulado:</strong> <span id="total"><%= total || 0 %></span>
    </div>

    <!-- Últimos registros -->
    <div class="ultimos">
      <strong>Últimos registros:</strong>
      <ul id="ultimos"></ul>
    </div>
  </div>

  <script>
    // Función para registrar votos vía AJAX y actualizar total y últimos registros
    const form = document.getElementById('formRegistro');
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const data = {
        nro_orden: form.nro_orden.value,
        cantidad_votos: form.cantidad_votos.value
      };
      const res = await fetch('/registrar', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      const result = await res.json();
      if(result.success){
        alert(result.success);
        form.reset();
        cargarTotal();
        cargarUltimos();
      } else {
        alert(result.error || 'Error al registrar.');
      }
    });

    async function cargarTotal() {
      const res = await fetch('/total');
      const data = await res.json();
      document.getElementById('total').textContent = data.total || 0;
    }

    async function cargarUltimos() {
      const res = await fetch('/ultimos');
      const registros = await res.json();
      const ul = document.getElementById('ultimos');
      ul.innerHTML = '';
      registros.forEach(r => {
        const li = document.createElement('li');
        li.textContent = `${r.nro_orden} → ${r.cantidad_votos} votos (${new Date(r.fecha_registro).toLocaleString()})`;
        ul.appendChild(li);
      });
    }

    // Cargar datos al iniciar
    cargarTotal();
    cargarUltimos();
  </script>
</body>
</html>
